.container
  .alert.alert-info
    | This is a sample login form created using:
    a(href='http://www.nodejs.org') nodejs
    | ,
    a(href='http://twitter.github.com/bootstrap/')  twitter-bootstrap
    | and
    a(href='http://jquery.com') jquery
.container
  .content
    form#login.form-horizontal(method='post', action='/login')
      fieldset
        legend Login
        .control-group
          label.control-label(for='input01') Username
          .controls
            input#user_name.input-xlarge(
              type='text'
              name='user_name'
              rel='popover'
              data-content='Enter your username.'
              data-original-title='Full Name') |
        .control-group
          label.control-label(for='input01') Password
          .controls
            input.input-xlarge(type='password') |
        .control-group
          label.control-label(for='input01')
          .controls
            button#password.btn.btn-success(rel='tooltip', title='first tooltip') Login
            | - or -
            a.btn.btn-primary(href='/Register') Sign-up
