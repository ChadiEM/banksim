.container
  if message== "Already-Exist" 
    .alert.alert-error
      | User Already exists!    
      a.btn.btn-primary(href='/login') Login
.container
  .content
    form#registerHere.form-horizontal(method='post', action='/register')
      fieldset
        legend Sign-up Form
        .control-group
          label.control-label(for='input01') Name
          .controls
            input#user_name.input-xlarge(type='text', name='name', rel='popover', data-content='Enter your first and last name.', data-original-title='Full Name')
        .control-group
          label.control-label(for='input01') Email
          .controls
            input#user_email.input-xlarge(type='text', name='email', rel='popover', data-content='Whatâ€™s your email address?', data-original-title='Email')
        .control-group
          label.control-label(for='input01') Password
          .controls
            input#pwd.input-xlarge(type='password', name='pass', rel='popover', data-content='6 characters or more! ', data-original-title='Password')
        .control-group
          label.control-label(for='input01') Confirm Password
          .controls
            input#cpwd.input-xlarge(type='password', name='cpwd', rel='popover', data-content='Re-enter your password for confirmation.', data-original-title='Re-Password')
        .control-group
          label.control-label(for='input01') Gender
          .controls
            select#gender(name='gender')
              option(value='') Gender
              option(value='male') Male
              option(value='female') Female
        .control-group
          label.control-label(for='input01')
          .controls
            button#signup.btn.btn-success(rel='tooltip', title='first tooltip') Create My Account
            | - or -
            a.btn.btn-primary(href='/login') Login
